<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.views.MainActivity">
    <TextView
            android:text="@string/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:text="@string/takeMoneyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/takeMoneyButton"
            android:onClick="takeMoneyButtonClick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" android:layout_marginTop="30dp"/>
    <Button
            android:text="@string/infoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/infoButton"
            android:onClick="showCurrentResourcesButtonClick"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="15dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/infoButton" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/makeCoffeeLayout" app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:text="@string/makeCoffeeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="28dp" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="@string/espressoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/makeEspressoButton"
                android:onClick="makeEspressoButtonClick"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
        <Button
                android:text="@string/cappuccinoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/makeCappuccinoButton"
                android:onClick="makeCappuccinoButtonClick"
                app:layout_constraintStart_toEndOf="@+id/makeEspressoButton" android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="24dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/makeLatteButton"
                app:layout_constraintStart_toEndOf="@+id/makeCappuccinoButton" android:layout_marginStart="10dp"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:onClick="makeLatteButtonClick"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
                app:layout_constraintHorizontal_bias="0.666" android:text="@string/latteButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="411dp"
            android:layout_height="293dp" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/makeCoffeeLayout"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/constraintLayout2">

        <Button
                android:text="@string/fillButton"
                android:layout_width="102dp"
                android:layout_height="49dp" android:id="@+id/fillResoursesButton"
                android:onClick="fillResourcesButtonClick"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
                app:layout_constraintTop_toBottomOf="@+id/fillCupsInput" android:layout_marginTop="15dp"/>
        <TextView
                android:text="@string/fillResourcesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="20dp"
                android:text="@string/waterLabel"/>
        <EditText
                android:layout_width="101dp"
                android:layout_height="49dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/fillWaterInput"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp" tools:ignore="SpeakableTextPresentCheck"/>
        <TextView
                android:text="@string/coffeeBeansLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
                app:layout_constraintTop_toBottomOf="@+id/fillWaterInput" android:layout_marginTop="20dp"/>
        <EditText
                android:layout_width="101dp"
                android:layout_height="49dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/fillCoffeeBeansInput"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
                android:layout_marginTop="10dp" tools:ignore="SpeakableTextPresentCheck"/>
        <TextView
                android:text="@string/milkLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="150dp"/>
        <EditText
                android:layout_width="101dp"
                android:layout_height="49dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/fillMilkInput"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="75dp"
                android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/textView6"
                tools:ignore="SpeakableTextPresentCheck"/>
        <EditText
                android:layout_width="101dp"
                android:layout_height="49dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/fillCupsInput"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="75dp"
                android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/textView8"
                tools:ignore="SpeakableTextPresentCheck"/>
        <TextView
                android:text="@string/paperCupsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/fillMilkInput" android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="106dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
