<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/fillPaperCupsInput"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11" tools:ignore="SpeakableTextPresentCheck"
            android:minHeight="48dp" android:importantForAutofill="no" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"/>
    <TextView
            android:text="@string/waterLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="30dp"/>
    <EditText
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/fillWaterInput"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:minHeight="48dp" tools:ignore="SpeakableTextPresentCheck"
            android:importantForAutofill="no"/>
    <EditText
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/fillMilkInput"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10" android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" android:importantForAutofill="no"/>
    <EditText
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/fillCoffeeBeansInput"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" android:importantForAutofill="no"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"/>
    <TextView
            android:text="@string/coffeeBeansLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@+id/fillCoffeeBeansInput"/>
    <TextView
            android:text="@string/milkLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView10"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@+id/fillWaterInput" android:layout_marginTop="40dp"/>
    <TextView
            android:text="@string/paperCupsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/fillCoffeeBeansInput"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="@+id/fillPaperCupsInput"/>
</androidx.constraintlayout.widget.ConstraintLayout>